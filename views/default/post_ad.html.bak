<script type="text/javascript">
    function insert_element()
	{	
        var required=['CATEGORY','SUB_CATEGORY','ITEM_NAME','DESCRIPTION','EMAIL_ID'];
		var bool=true;
		for(var i=0;i<required.length;i++)
	    {
    		if(document.getElementById(required[i]).value=="" || document.getElementById(required[i]).value=="Make a selection" )
			{
					alert(required[i]+' is mandatry field!!');
					bool=false;
			}
        }
        if(bool==false)
        {
        	return bool;
        }
        var text1=document.getElementById("PHONE_NUMBER").value;
 		var text2=document.getElementById("EMAIL_ID").value;
 		var text3=document.getElementById("CATEGORY").value;
 		var text4=document.getElementById("SUB_CATEGORY").value;
 		var text5=document.getElementById("ITEM_NAME").value;
 		var text6=document.getElementById("DESCRIPTION").value;
 		var text7=document.getElementById("PRICE").value;
 		var text8=document.getElementById("PURPOSE").value;
        if (isNaN(text1) || text1.length!=10)
    	{
    		alert("Please give a valid Phone number");
    		return ;
  		}
        var atpos=text2.indexOf("@");
		var dotpos=text2.lastIndexOf(".");
		if (atpos<1 || dotpos<atpos+2 || dotpos+2>=text2.length)
  		{
  			alert("Not a valid e-mail address");
  			return;
  		}
        if (isNaN(text7))
    	{
    		alert("Please give a valid Price");
    		return ;
  		}
        else
        {
 			window.location.href="{{=URL('insert_post')}}?text1="+text1+"&text2="+text2+"&text3="+text3+"&text4="+text4+"&text5="+text5+"&text6="+text6+"&text7="+text7+"&text8="+text8;
    	}
    }
  
</script>


<script type="text/javascript">
	var categories = []; 
	categories["startList"] = ["BOOKS","OTHERS","ELECTRONICS","STUDY MATERIALS","SOFTWARES","VEHICLES"]
	categories["BOOKS"] = ["FICTION","NON FICTION","REFERENCE BOOKS","MAGZINES"];
	categories["SOFTWARES"] = ["OPERATING SYSTEMS","APPLICATION PROGRAMS","ANTIVIRUS"];
	categories["STUDY MATERIALS"] = ["UNDER GRADUATE","POST GRADUATE","PhD"];
	categories["OTHERS"] = ["ACCESSORIES","CLOTHING","SHOES","WATCHES","OTHERS"];
	categories["ELECTRONICS"] = ["COMPUTER PERIPHRALS","LAPTOPS","CAMERA","CELL PHONES"];
	categories["VEHICLES"] = ["BI CYCLES","CARS","BIKES","SPARE PARTS"];
	var nLists = 2; // number of lists in the set

	function fillSelect(currCat,currList){
		var step = Number(currList.name.replace(/\D/g,""));
		for (i=step; i<nLists+1; i++) {
			document.forms[0]['List'+i].length = 1;
			document.forms[0]['List'+i].selectedIndex = 0;
		}

		var nCat = categories[currCat];
		for (each in nCat) 	{
			var nOption = document.createElement('option'); 
			var nData = document.createTextNode(nCat[each]); 
			nOption.setAttribute('value',nCat[each]); 
			nOption.appendChild(nData); 
			currList.appendChild(nOption); 

		} 
	}


	function init() {
		fillSelect('startList',document.forms[0]['List1'])
	}

	navigator.appName == "Microsoft Internet Explorer" ? attachEvent('onload', init, false) : addEventListener('load', init, false);	

    

</script>


